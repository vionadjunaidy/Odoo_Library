<odoo>
    <record id="view_library_book_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="Library Book">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="author_id"/>
                        <field name="price"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_library_book_tree" model="ir.ui.view">
        <field name="name">library.book.tree</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree string="Library Books">
                <field name="name"/>
                <field name="author_id"/>
                <field name="price"/>
            </tree>
        </field>
    </record>

    <record id="action_library_books" model="ir.actions.act_window">
        <field name="name">Library Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_library_root" name="Library"/>
    <menuitem id="menu_library_book" name="Books" parent="library_books_root" action="action_library_books"/>

</odoo>